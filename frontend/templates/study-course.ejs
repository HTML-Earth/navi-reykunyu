<!doctype html>

<html>
	<head>
		<meta charset="utf-8">
		<title>Study</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/study.css" rel="stylesheet">
	</head>
	<body>
		<div id="main-container" class="container">
			<h3><%- course['name'] %></h3>
			<p><%- course['description'] %></p>
			<ul class="vertical-list">
				<% for (let lesson of lessons) { %>
					<li>
						<a class="on-button" href="/study/lesson?c=<%= course['id'] + 1 %>&l=<%= lesson['id'] + 1 %>">
							<div class="card-title"><%- _('lesson') %> <%= lesson['id'] + 1 %></div>
							<div class="card-description"><%= lesson['name'] %></div>
							<b><%= lesson['known_count'] - lesson['reviewable_count'] %></b> known,
							<b><%= lesson['reviewable_count'] %></b> up for review,
							<b><%= lesson['total_count'] - lesson['known_count'] %></b> unknown
						</a>
					</li>
				<% } %>
			</ul>
		</div>
		<script src="/vendor/jquery/jquery-3.3.1.js"></script>
		<script src="/js/ui-translations.js"></script>
	</body>
</html>

