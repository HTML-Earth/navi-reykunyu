<!doctype html>

<html>
	<head>
		<meta charset="utf-8">
		<title>Study</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/study.css" rel="stylesheet">
	</head>
	<body>
		<div id="main-container" class="container">
			<h3><%- _('pick-a-course') %></h3>
			<p><%- _('pick-a-course-note') %></p>
			<ul class="cards-list">
				<% for (let course of courses) { %>
					<li>
						<a class="on-button" href="/study/course?c=<%= course['id'] + 1 %>">
							<div class="card-title"><%= course['name'] %></div>
							<div class="card-description"><%= course['description'] %></div>
						</a>
					</li>
				<% } %>
			</ul>
		</div>
		<script src="/vendor/jquery/jquery-3.3.1.js"></script>
		<script src="/js/ui-translations.js"></script>
	</body>
</html>

